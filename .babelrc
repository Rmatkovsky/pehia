{
  "presets": [
    ["env", {
      "targets": {
        "browsers": ["last 2 versions", "ie 11"],
        "modules": false
      },
      "useBuiltIns": true
    }],
    "react",
    "es2015"
  ],
  "plugins": [
    "transform-runtime",
    "transform-object-rest-spread",
    "transform-class-properties",
    ["transform-react-remove-prop-types", {"mode": "wrap"}],
    [
      "react-intl", {
        "messagesDir": "./i18n/.src",
        "enforceDescriptions": false
      }
    ]
  ],
  "env": {
    "development": {},
    "production": {},
    "test": {
      "presets": ["es2015", "react"],
      "plugins": ["istanbul"]
    }
  }

}
